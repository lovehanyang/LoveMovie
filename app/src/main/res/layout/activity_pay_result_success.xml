<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_content_bg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:paddingBottom="26.0dip">

            <ImageView
                android:id="@+id/iv_pay_success_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22.0dip"
                android:layout_marginTop="26.0dip"
                android:src="@drawable/icon_pay_success_top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22.0dip"
                android:layout_marginTop="26.0dip"
                android:layout_toRightOf="@id/iv_pay_success_top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_result_success_title_txt"
                    android:textColor="@color/c1"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/pay_result_success_sub_title_txt"
                    android:textColor="@color/c2"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/bg_pay_success_bar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="-4.0dip"
            android:background="@drawable/border_pay_info_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="22.0dip">

            <TextView
                android:id="@id/tv_movie_name"
                android:layout_width="fill_parent"
                android:layout_height="58.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:text="致我们即将逝去的青春"
                android:textColor="@color/c1"
                android:textSize="16.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="33.0dip"
                android:layout_marginLeft="7.0dip"
                android:layout_marginRight="7.0dip"
                android:background="@drawable/bg_pay_info_text"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:gravity="center_vertical"
                    android:text="影院\nCINEMA"
                    android:textColor="#ff808080"
                    android:textSize="10.0sp" />

                <TextView
                    android:id="@id/tv_cinema_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="北京万达电影院"
                    android:textColor="@color/c1"
                    android:textSize="15.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.0dip"
                android:layout_marginRight="7.0dip"
                android:layout_marginTop="16.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="33.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/bg_pay_info_text"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="3.0dip"
                        android:layout_weight="0.0"
                        android:gravity="center_vertical"
                        android:text="影厅\nHALL"
                        android:textColor="#ff808080"
                        android:textSize="10.0sp" />

                    <TextView
                        android:id="@+id/tv_room_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5.0dip"
                        android:gravity="center|right"
                        android:singleLine="true"
                        android:text="2号厅"
                        android:textColor="@color/c1"
                        android:textSize="@dimen/t5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="33.0dip"
                    android:layout_marginLeft="7.0dip"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_pay_info_text"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_weight="0.0"
                        android:gravity="center_vertical"
                        android:text="时间\nTIME"
                        android:textColor="#ff808080"
                        android:textSize="10.0sp" />

                    <TextView
                        android:id="@+id/tv_show_time"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5.0dip"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="2015-01-01 20:20"
                        android:textColor="@color/c1"
                        android:textSize="@dimen/t5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="33.0dip"
                android:layout_marginLeft="7.0dip"
                android:layout_marginRight="7.0dip"
                android:layout_marginTop="16.0dip"
                android:background="@drawable/bg_pay_info_text"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seat_info"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="0.0"
                    android:gravity="center_vertical"
                    android:text="座位\nSEAT"
                    android:textColor="#ff808080"
                    android:textSize="10.0sp" />

                <TextView
                    android:id="@+id/tv_seat"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5.0dip"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/c1"
                    android:textSize="@dimen/t5" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@id/btn_ok"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/bg_my_btn_yellow"
            android:gravity="center"
            android:text="@string/pay_result_success_btn_txt"
            android:textColor="@color/c1"
            android:textSize="16.0sp" />
    </LinearLayout>
</ScrollView>