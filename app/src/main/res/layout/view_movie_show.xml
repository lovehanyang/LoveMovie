<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:focusable="true"
        android:splitMotionEvents="false"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="@dimen/common_container_content_gap"
        android:layout_marginRight="@dimen/common_container_content_gap"
        android:layout_marginTop="5dip"
        android:background="@color/common_line" />

    <LinearLayout
        android:id="@+id/center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_release"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_small_btn_h"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_release_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3.0dip"
                android:text="0"
                android:textColor="@color/c6"
                android:textSize="@dimen/t1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="8.0dip"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text="@string/showing"
                android:textColor="@color/c6"
                android:textSize="@dimen/t4" />
        </LinearLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="8.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@color/common_line" />

        <LinearLayout
            android:id="@+id/ly_will"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_small_btn_h"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_will_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3.0dip"
                android:text="0"
                android:textColor="@color/c6"
                android:textSize="@dimen/t1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="8.0dip"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text="@string/will_show"
                android:textColor="@color/c6"
                android:textSize="@dimen/t4" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>