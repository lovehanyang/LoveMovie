<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_content_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/color_title_bar" >

            <ImageView
                android:id="@id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="5.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="5.0dip"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定手机"
                android:textColor="@color/white"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/iv_back"
                android:paddingBottom="5.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="5.0dip"
                android:text="跳过"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_marginTop="36.0dip"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:text="叼炸天"
            android:textColor="@color/c1"
            android:textSize="16.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginTop="25.0dip" >

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="绑定手机号才能享受优惠噢！"
                android:inputType="phone"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:textColor="@color/c1"
                android:textColorHint="@color/c3"
                android:textSize="14.0sp" />

            <ImageView
                android:id="@+id/bind_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/icon_edit_delete" />
        </RelativeLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/bg_my_btn_yellow"
            android:gravity="center"
            android:text="绑定手机"
            android:textColor="@color/c1"
            android:textSize="16.0sp" />
    </LinearLayout>

</ScrollView>